<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../units/schema/language.dtd">
<document>
	<cms:var name="_DOCTYPE"/>
	<html lang="$language" cms:eval="lang">
		<head>
			<title><cms:text constant="site_title"/></title>
			<cms:module name="head_tag" action="print_tag"/>
		</head>

		<body class="$language_rtl ? 'rtl' : 'ltr'" cms:eval="class">
			<cms:svg file="../images/site-sprite.svg"/>
			<div class="mobile_title">
				<a href="javascript:void(0)" class="menu"></a>
				<a
					class="logo"
					href="url_Make('', 'home')"
					cms:eval="href"
					cms:optional="class"
					>
				</a>
				<a
					href="'tel:'.urlencode(Language::getText('phone'))"
					cms:eval="href"
					class="phone"
					>
					<svg>
						<use
							href="#icon-phone"
							xlink:href="site/images/site-sprite.svg#icon-phone"
							/>
					</svg>
				</a>

			</div>

			<nav class="mobile_menu">
				<cms:module
					name="links"
					action="show_link_list"
					template="parts/menu.xml"
					/>
			</nav>

			<header>
				<span class="info"><cms:text constant="info"/></span>
				<cms:module
					name="articles"
					action="show"
					text_id="title_article"
					template="parts/article.xml"
					/>
			</header>

			<section class="controls">
				<a
					href="'tel:'.urlencode(Language::getText('phone'))"
					cms:eval="href"
					class="phone_link"
					>
					<cms:text constant="call_to_action"/>
					<svg>
						<use
							href="#icon-phone"
							xlink:href="site/images/site-sprite.svg#icon-phone"
							/>
					</svg>
				</a>

				<a
					href="url_Make('', 'contact')"
					cms:eval="href"
					class="form_link"
					>
					<cms:text constant="form_link_label"/>
					<svg>
						<use
							href="#icon-duc"
							xlink:href="site/images/site-sprite.svg#icon-duc"
							/>
					</svg>
				</a>
			</section>

			<footer>
				<span><cms:text constant="copyright"/></span>
			</footer>
		</body>
	</html>
</document>
